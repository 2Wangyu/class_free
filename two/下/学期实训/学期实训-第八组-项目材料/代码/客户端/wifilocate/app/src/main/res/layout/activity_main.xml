    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:titleTextColor="#333333"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/baseline_navigation_24"
            android:background="@drawable/grey_background"
            />

        <EditText
            android:id="@+id/search_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入您想要前往的商店"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3333"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="1"

                    android:background="@drawable/grey_background"
                    android:src="@drawable/baseline_star_24" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3333"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/grey_background"
                    android:src="@drawable/baseline_add_shopping_cart_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3333"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/grey_background"
                    android:src="@drawable/baseline_people_outline_24" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/second_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="商家评价"
                android:background="@drawable/grey_background"
                android:textColor="#50AAB8"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="#50AAB8"
                android:text="我的附近"
                android:background="@drawable/grey_background"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="end"
                android:textColor="#50AAB8"
                android:text="附近的人"
                android:background="@drawable/grey_background"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>


        <!-- Horizontal Line -->
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/third_row"
        android:layout_marginTop="0dp"
        android:background="@drawable/curved_line"/>

<!--我的位置提示-->
    <LinearLayout
        android:id="@+id/position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="逸夫三楼"
                android:background="@drawable/grey_background"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:src="@drawable/baseline_edit_location_24"
                android:background="@drawable/grey_background"
                android:textColor="#50AAB8"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="#000"
                android:text="您的位置"
                android:background="@drawable/grey_background"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>


<!--    放置第一行商家-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourth_row"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/position"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp">


        <ImageView

            android:id="@+id/dinner1"
            android:layout_width="0dp"
            android:layout_height="83dp"

            android:scaleType="centerInside"
            android:src="@mipmap/dinner1"
            app:layout_constraintEnd_toStartOf="@id/elevator1"

            app:layout_constraintWidth_percent="0.23"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/elevator1"

            android:layout_width="0dp"

            android:layout_height="83dp"
            android:layout_gravity="center_vertical"

            android:scaleType="centerInside"
            android:src="@mipmap/evelator1"
            app:layout_constraintEnd_toStartOf="@id/dinner1"

            app:layout_constraintWidth_percent="0.11"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView

            app:layout_constraintStart_toEndOf="@id/elevator1"

            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.08"
            android:id="@+id/exit1"
            android:layout_height="83dp"
            android:src="@mipmap/exit1"
            android:scaleType="centerInside"

            />
        <ImageView
            app:layout_constraintStart_toEndOf="@id/exit1"
            android:id="@+id/dinner2"

            app:layout_constraintWidth_percent="0.16"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:scaleType="centerInside"
            android:src="@mipmap/dinner2"
            />

        <ImageView
            app:layout_constraintStart_toEndOf="@id/dinner2"
            app:layout_constraintWidth_percent="0.24"
            android:id="@+id/dinner3"
            android:layout_width="0dp"


            android:layout_height="83dp"
            android:src="@mipmap/dinnner3"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            app:layout_constraintStart_toEndOf="@id/dinner3"

            android:id="@+id/energy1"

            app:layout_constraintWidth_percent="0.07"
            android:layout_width="0dp"

            android:layout_height="83dp"
            android:src="@mipmap/energy1"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            app:layout_constraintStart_toEndOf="@id/energy1"

            android:id="@+id/exit2"
            app:layout_constraintWidth_percent="0.08"
            android:layout_width="0dp"

            android:layout_height="83dp"
            android:src="@mipmap/exit2"
            android:scaleType="centerInside"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

<!--    过道-->
    <LinearLayout
        android:id="@+id/hallway"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@mipmap/mbg"

        app:layout_constraintTop_toBottomOf="@id/fourth_row"

        >



    </LinearLayout>
    <!-- Horizontal Line -->
    <View
        android:id="@+id/horizontal_line2"
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/sixth_row"
        android:layout_marginTop="0dp"
        android:background="@drawable/curved_line"/>
<!--第二排商家-->

    <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/sixth_row"
       android:layout_width="match_parent"
       android:layout_height="92dp"
       android:orientation="horizontal"
       android:layout_marginTop="8dp"
       app:layout_constraintTop_toBottomOf="@id/hallway"
       android:layout_marginLeft="0dp"
       android:layout_marginRight="0dp"
       >


       <ImageView

           android:id="@+id/dinner4"
           android:layout_width="0dp"
           android:layout_height="83dp"

           android:scaleType="centerInside"
           android:src="@mipmap/dinner4"
           app:layout_constraintEnd_toStartOf="@id/exit3"

           app:layout_constraintWidth_percent="0.26"
           tools:layout_editor_absoluteY="0dp" />

       <ImageView
           android:id="@+id/exit3"

           android:layout_width="0dp"

           android:layout_height="83dp"
           android:layout_gravity="center_vertical"

           android:scaleType="centerInside"
           android:src="@mipmap/exit1"
           app:layout_constraintEnd_toStartOf="@id/dinner4"

           app:layout_constraintWidth_percent="0.08"
           tools:layout_editor_absoluteY="0dp" />

       <ImageView

           app:layout_constraintStart_toEndOf="@id/exit3"

           android:layout_width="0dp"
           app:layout_constraintWidth_percent="0.24"
           android:id="@+id/dinner5"
           android:layout_height="83dp"
           android:src="@mipmap/dinner5"
           android:scaleType="centerInside"

           />
       <ImageView
           app:layout_constraintStart_toEndOf="@id/dinner5"
           android:id="@+id/dinner6"

           app:layout_constraintWidth_percent="0.23"
           android:layout_width="0dp"
           android:layout_height="83dp"
           android:scaleType="centerInside"
           android:src="@mipmap/dinner6"
           />

       <ImageView
           app:layout_constraintStart_toEndOf="@id/dinner6"
           app:layout_constraintWidth_percent="0.15"
           android:id="@+id/wc1"
           android:layout_width="0dp"


           android:layout_height="83dp"
           android:src="@mipmap/wc1"
           android:scaleType="centerInside"
           android:layout_gravity="center_vertical"
           />


  </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    通知栏展示-->
    <LinearLayout
        android:id="@+id/nearmess"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/sixth_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/baseline_message_24"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="start"
                android:textColor="#000"
                android:text="您的附近"
                android:background="@drawable/grey_background"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/nearmess"

        >

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




