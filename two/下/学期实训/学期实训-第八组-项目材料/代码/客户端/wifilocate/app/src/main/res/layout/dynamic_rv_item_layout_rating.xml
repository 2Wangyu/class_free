<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="5dp"
    >
    <com.example.wifi_locate.CircleImageView
        android:id="@+id/image2user"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="20dp"
        android:src="@drawable/baseline_navigation_24"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintLayoutuser"
        >

    </com.example.wifi_locate.CircleImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutuser"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/dynamic_rv_bg"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent=".99">

        <TextView
            android:id="@+id/name1userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:text="navigation"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias=".05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias=".15"
            >

        </TextView>

        <TextView
            android:id="@+id/detailsuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="details"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/name1userId"
            app:layout_constraintTop_toBottomOf="@+id/name1userId"
            app:layout_constraintVertical_bias="0"


            ></TextView>

        <RatingBar

            android:id="@+id/ratingbaruser"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:progressTint="#FFC90E"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/detailsuser"
            app:layout_constraintTop_toBottomOf="@+id/detailsuser"
            app:layout_constraintVertical_bias="0"


            ></RatingBar>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>